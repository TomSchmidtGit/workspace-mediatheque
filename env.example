# Configuration de l'environnement
NODE_ENV=production

# Ports des services
BACKEND_PORT=5001
FRONTEND_PORT=3000

# Configuration MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=mediatheque
MONGO_URI=mongodb://admin:password123@mongodb:27017/mediatheque?authSource=admin

# Configuration JWT
